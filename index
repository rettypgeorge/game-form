<section class="hero">
  <div class="hero-content">
    <h1>Welcome to My Website</h1>
    <p>Your journey to learning web development starts here.</p>
    <!-- <a href="#learn-more" class="cta-button">Get Started</a>-->
  </div>


  <div class="form-container">
    <form id="gameForm">
	<label for="genre">Choose your game genre:</label>
      <select id="genre" name="genre">
        <option value="">--Select--</option>
        <option value="action">Action</option>
        <option value="adventure">Adventure</option>
        <option value="rpg">RPG</option>
        <option value="strategy">Strategy</option>
        <option value="sports">Sports</option>
      </select>

      <label for="years">How many years have you been playing?</label>
      <input type="range" id="years" name="years" min="0" max="20" value="10" oninput="sliderValue.innerText = this.value + ' years';">
      <div class="slider-value" id="sliderValue">10 years</div>

      <button type="submit">Submit</button>
    </form>
<div id="savedData" style="margin-top: 20px; font-weight: bold;"></div>

  </div>
<script>
  const form = document.getElementById('gameForm');
  const yearsSlider = document.getElementById('years');
  const sliderValue = document.getElementById('sliderValue');
  const genreSelect = document.getElementById('genre');

  // Update the slider label live
  yearsSlider.oninput = () => {
    sliderValue.textContent = `${yearsSlider.value} years`;
  };

  // Save to localStorage when form is submitted
  form.addEventListener('submit', function(event) {
    event.preventDefault(); // stop actual form submit

    // Get values
    const formData = {
      genre: genreSelect.value,
      years: yearsSlider.value
    };

    // Convert to JSON and store in localStorage
    localStorage.setItem("gameFormData", JSON.stringify(formData));

    alert("Your form data has been saved!");
  });
</script>

